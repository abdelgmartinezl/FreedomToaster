# Importe de las librerias implicadas.
import clutter
import os

# Clase que manipula al boton VOLVER.
class Volver(clutter.Texture):
	def __init__(self):
		clutter.Texture.__init__(self)
		self.set_size (60,60)
        	self.set_position (530,410)
        	self.set_cogl_texture(volver)
        	self.set_reactive(True)
        	# Llamada al metodo que controla el evento click.
        	self.connect("button-press-event",self.clicked)

	def clicked(self, stage, event):
		exit()

# Clase que manipula al boton GUARDAR 1.
class Guardar1(clutter.Texture):
	def __init__(self):
		clutter.Texture.__init__(self)
		self.set_size (114,34)
        	self.set_position (262,135)
        	self.set_cogl_texture(guardar)
        	self.set_reactive(True)
        	# Llamada al metodo que controla el evento click.
        	self.connect("button-press-event",self.clicked)

	def clicked(self, stage, event):
		os.system("python '/home/toquin/Toquin/src/ficha_libro.py' libro_7")

# Clase que manipula al boton GUARDAR 2.
class Guardar2(clutter.Texture):
	def __init__(self):
		clutter.Texture.__init__(self)
		self.set_size (114,34)
        	self.set_position (262,225)
        	self.set_cogl_texture(guardar)
        	self.set_reactive(True)
        	# Llamada al metodo que controla el evento click.
        	self.connect("button-press-event",self.clicked)

	def clicked(self, stage, event):
		os.system("python '/home/toquin/Toquin/src/ficha_libro.py' libro_8")

# Clase que manipula al boton GUARDAR 3.
class Guardar3(clutter.Texture):
	def __init__(self):
		clutter.Texture.__init__(self)
		self.set_size (114,34)
        	self.set_position (262,315)
        	self.set_cogl_texture(guardar)
        	self.set_reactive(True)
        	# Llamada al metodo que controla el evento click.
        	self.connect("button-press-event",self.clicked)

